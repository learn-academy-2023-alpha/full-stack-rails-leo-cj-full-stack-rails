<h2>Edit your Blog</h2>

<%= form_with model: @blog do |form| %>
    <%= form.label :title %>
    <%= form.text_field :title %>
    <%= form.label :content %>
    <%= form.text_field :content %>
    <%= form.submit "Submit blog changes" %>
  <% end %>

  <p><%= link_to 'Home Page', blogs_path %></p>
  <p><%= link_to 'Blog Page', blog_path %></p>
